<div class="container">
	<div class="row ">
		<% if flash[:notice] %>
		 <%= flash[:notice] %>
		<% end %>
		<%= render 'users/sidebar', user: @book.user,book: Book.new %>
		<div class="col-xs-9">
		<h1>Book detail</h1>

			<table class="table">
				<tr>
					<td><%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.jpg", size:"40x40" %><br><%= link_to @book.user.name,user_path(@book.user) %></td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<% if current_user.id == @book.user_id %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger",method: :delete, "data-confirm"=>"本当に削除しますか？" %></td>
					<% end %>
				</tr>

			</table>
		</div>
	</div>


</div>