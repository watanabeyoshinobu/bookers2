<div class="col-xs-3">
	<h1>User info</h1>

	<%= attachment_image_tag user, :profile_image, fallback:"no_image.jpg", size:"40x40" %>

  <table class="table">
  		<tr>
  			<td>Name</td>
  			<td><%= user.name %></td>
  		</tr>
  		<tr>
  			<td>introduction</td>
  			<td><%= user.introduction%></td>
  		</tr>
  </table>
  <%= link_to "" ,edit_user_path(current_user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
   <%= form_for(book) do |f| %>


	<h4>title</h4>
    <%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'create book' %>

<% end %>
</div>