<h1>Editing user</h1>
 <% if @user.errors.any? %>
 <%= @user.errors.count %>error
 <%= @user.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
 <% end %>
 <%= form_for(@user) do |f| %>
    <h4>title</h4>
    <%= f.text_field :name %>

    <h4>image</h4>
    <%= f.attachment_field :profile_image %>

    <h4>body</h4>
    <%= f.text_area :introduction %>

    <%= f.submit 'Update Book' %>

<% end %>

   <%= link_to 'Show', user_path(@user) %>

   <%= link_to 'Back', users_path %>